<schemalist gettext-domain="gnome-shell-extensions">
    <schema id="org.gnome.shell.extensions.extend-panel-menu" path="/org/gnome/shell/extensions/extend-panel-menu/">
        <key name="username-text" type="s">
            <default>""</default>
            <summary>Custom Name</summary>
        </key>
        <key name="user-icon" type="b">
            <default>false</default>
            <summary>Show an icon instead of name</summary>
        </key>
        <key name="date-format" type="s">
            <default>""</default>
            <summary>Date format</summary>
        </key>
        <key name="always-show-nightlight" type="b">
            <default>false</default>
            <summary>Show Night Light indicator when effect is inactive</summary>
        </key>
        <key name="autohide-notification" type="b">
            <default>false</default>
            <summary>Auto hide the notification indicator</summary>
        </key>
        <key name="autohide-on-full-power" type="b">
            <default>false</default>
            <summary>Auto hide the power indicator on full</summary>
        </key>
        <key name="autohide-on-percent" type="b">
            <default>false</default>
            <summary>Auto hide the power indicator on percent</summary>
        </key>
        <key name="autohide-when-percent" type="i">
            <default>50</default>
            <summary>Auto hide when percent</summary>
            <range min="10" max="100"/>
        </key>
        <key name="autohide-power-icon-label" type="i">
            <default>0</default>
            <summary>Auto hide the power indicator (icon/label) on percent</summary>
        </key>
        <key name="tray-offset" type="i">
            <default>0</default>
            <summary>Tray Offset</summary>
            <range min="0" max="10"/>
        </key>
        <key name="spacing" type="i">
            <default>6</default>
            <summary>Horizontal Spacing</summary>
            <range min="0" max="12"/>
        </key>
        <key name="items" type="s">
            <default>"Night Light Indicator [GNOME Shell>=3.24];1;0;nightlight|Volume Indicator;1;0;volume|Network Indicator;1;0;network|Power(Brightness) Indicator;1;0;power|Calendar Indicator;1;0;calendar|User Indicator;1;0;user|Notification Indicator;1;0;notification"</default>
            <summary>Indicators</summary>
        </key>
    </schema>
</schemalist>
